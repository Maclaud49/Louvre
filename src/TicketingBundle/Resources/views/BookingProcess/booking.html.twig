{% extends "TicketingBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - {% trans %}ticketing.bookingPage.booking{% endtrans %}
{% endblock %}

{% block content %}

    <div id="openDaysInformationMessage">
        <h2>{% trans %}ticketing.bookingPage.information{% endtrans %}</h2>
        <p>{% trans %}ticketing.bookingPage.closedDaysSentence{% endtrans %} <br>{% trans %}ticketing.bookingPage.closedDays{% endtrans %}</p>
    </div>



    <div id="ticketsQtyMessageWarning" class="alert alert-warning text-center" style="display:none">{% trans %}ticketing.bookingPage.ticketsQtyMessageWarning{% endtrans %}</div>
    <div id="ticketsQtyMessageInfo" class="alert alert-info text-center" style="display:none"><p><strong>{% trans %}ticketing.bookingPage.ticketsQtyMessageInfo1{% endtrans %} </strong> {% trans %}ticketing.bookingPage.ticketsQtyMessageInfo2{% endtrans %}</p></div>

    <div id="loadingSpinner" style="display:none;margin-bottom:10px">
        <button class="btn btn-sm btn-warning">
            <span class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span> {% trans %}ticketing.bookingPage.checkavailability{% endtrans %}
        </button>
    </div>

    {{ include("TicketingBundle:Forms:orderTypeForm.html.twig") }}

    <div id="PricesInformationMessage">
        <h2>{% trans %}ticketing.bookingPage.ticketPricing{% endtrans %}</h2>
        <ul class="list-group">
            <li class="list-group-item"><strong>{% trans %}ticketing.bookingPage.fullFare{% endtrans %} </strong> 16€  {% trans %}ticketing.bookingPage.from12{% endtrans %}</li>
            <li class="list-group-item"><strong>{% trans %}ticketing.bookingPage.childFare{% endtrans %} </strong> 8 €  {% trans %}ticketing.bookingPage.from4{% endtrans %}</li>
            <li class="list-group-item"><strong>{% trans %}ticketing.bookingPage.seniorFare{% endtrans %} </strong> 12€ {% trans %}ticketing.bookingPage.from60{% endtrans %}</li>
            <li class="list-group-item"><strong>{% trans %}ticketing.bookingPage.reducedFare{% endtrans %} </strong> 10€ {% trans %}ticketing.bookingPage.credential{% endtrans %}</li>
            <li class="list-group-item"><strong>{% trans %}ticketing.bookingPage.halfDayFare{% endtrans %} </strong> 10€ </li>
            <li class="list-group-item"><em>{% trans %}ticketing.bookingPage.free{% endtrans %}</em></li>
        </ul>
    </div>



{% endblock %}
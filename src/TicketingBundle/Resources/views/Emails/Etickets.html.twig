

    <div style="display:flex;flex-direction:column;justify-content:center;align-items:center;">
        <div id="container">
            <div id="welcome">
                <h2>{% trans %}Récapitulatif de votre commande pour votre visite du musée du Louvre :{% endtrans %}</h2>
            </div>

            <div style="margin-top: 30px">
                <p><strong>{% trans %}Date de la visite :{% endtrans %}</strong> {{ order.bookingDate|date("d/m/y") }}</p>
                <p><strong>{% trans %}Référence de la commande :{% endtrans %}</strong>  {{ order.bookingCode }}</p>
            </div>

            <div class="tab-content" id="orderSummary">
                <div class="tab-pane fade in active adminTable">
                        <div class="table-responsive" id="ticketsSummary">
                            <table class="table table-hover table-condensed">
                                <thead>
                                <tr>
                                    <th style="text-align: center">{% trans %}Billet{% endtrans %}</th>
                                    <th style="text-align: center">{% trans %}Tarif réduit{% endtrans %}</th>
                                    <th style="text-align: center">{% trans %}Nomination{% endtrans %}</th>
                                    <th style="text-align: center">{% trans %}Quantité{% endtrans %}</th>
                                    <th style="text-align: center">{% trans %}Tarif retenu{% endtrans %}</th>
                                </tr>
                                </thead>
                                {% for ticket in order.tickets %}
                                    <tr>
                                        <td>{% if  ticket.type == 1  %}
                                                <p style="text-align: center">{% trans %}Journée{% endtrans %}</p>
                                            {% else %}
                                                <p style="text-align: center">{% trans %}Demi-journée{% endtrans %}</p>
                                            {% endif %}
                                        </td>
                                        <td>{% if  ticket.reducedPrice == 1  %}
                                                <p style="text-align: center">{% trans %}Oui{% endtrans %}</p>
                                            {% else %}
                                                <p style="text-align: center">{% trans %}Non{% endtrans %}</p>
                                            {% endif %}
                                        </td>
                                        <td style="text-align: center">{{ ticket.firstName }} {{ ticket.lastName }}</td>
                                        <td style="text-align: center">1</td>
                                        <td style="text-align: center">{{ ticket.Price|number_format(2, ',', '') }}€</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                        <div class="table-responsive col-sm-offset-6 col-sm-6" id="totalSummary">
                            <table class="table table-hover table-condensed">

                                <tr>
                                    <th class="text-center" style="font-weight: normal;">{% trans %}Total HT{% endtrans %}</th>
                                    <td class="text-center">{{ (order.orderAmount / 1.1)|number_format(2, ',', '') }}€</td>
                                </tr>
                                <tr>
                                    <th class="text-center" style="font-weight: normal;">{% trans %}Total TVA (10,00%){% endtrans %}</th>
                                    <td class="text-center">{{ (order.orderAmount - order.orderAmount / 1.1)|number_format(2, ',', '')}}€</td>
                                </tr>
                                <tr>
                                    <th class="text-center">{% trans %}Total de la commande{% endtrans %}</th>
                                    <td class="text-center"><strong>{{ order.orderAmount|number_format(2, ',', '') }}€</strong></td>
                                </tr>
                            </table>
                        </div>
                </div>
            </div>



            <p>{% trans %}Nous vous souhaitons une très bonne visite du musée !{% endtrans %}</p>

            <p>--  {% trans %}L'équipe du musée du Louvre{% endtrans %}  --</p>
        </div>
    </div>





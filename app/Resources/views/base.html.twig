<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}{% trans %}ticketing.layout.ticketing{% endtrans %}{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">
        <link rel="stylesheet" href="{{ asset('css/louvre.css') }}" />
    {% endblock %}
    <link rel="icon" type=image/png" href="{{ asset('images/favicon-16.png') }}" />

</head>

<body>


<div class="container-fluid">

    <div class="row">
        <div class="thumbnail text-center">
            <img src="{{ asset('images/louvreBilleterie.jpg') }}" alt={% trans %}ticketing.layout.entrance{% endtrans %} class="img-responsive">
            <div class="caption col-sm-12">
                <p id="welcome-text">{% trans %}ticketing.layout.welcome{% endtrans %}</p>
            </div>
        </div>
    </div>


    <div id="content" class="text-center" style="display:flex;flex-direction:column;justify-content:center;align-items:center;">
        {% block content %}
        {% endblock %}
    </div>

    <hr>

    <div id="banner-bottom" style="height:100px"></div>
</div>



{% block javascripts %}
    <script
            src="https://code.jquery.com/jquery-3.2.1.min.js"
            integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
            crossorigin="anonymous"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script
            src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"
            integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU="
            crossorigin="anonymous"></script>
    <script type="text/javascript" src="{{ asset('js/louvre.js') }}"></script>
{% endblock %}




</body>
</html>
